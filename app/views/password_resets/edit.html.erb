<% provide(:title, t('.reset_html')) %>

<h1 class="animated fadeInDown"><%= t('.reset_html') %></h1>

<div class="row">
  <div class="span6 offset3 animated fadeInRight">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= hidden_field_tag :email, @user.email %>

      <%= f.label :password, t('.new_html') %>
      <%= f.password_field :password, class: 'form-control', placeholder: '••••••', maxlength: 35 %>

      <%= f.label :password_confirmation, t('.confirm_html') %>
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: '••••••', maxlength: 35 %>

      <%= f.submit t('.update_html'), data: {disable_with: t('.updating_html')},
                   class: 'btn btn-large btn-block btn-primary' %>
    <% end %>
  </div>
</div>
