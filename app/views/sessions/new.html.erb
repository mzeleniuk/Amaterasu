<% provide(:title, "Вхід") %>
<h1>Вхід</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.label :email, "Електронна пошта" %>
        <%= f.text_field :email %>

        <%= f.label :password, "Пароль" %>
        <%= f.password_field :password %>

        <%= f.submit "Увійти", id: "signin_button", class: "btn btn-large btn-block btn-primary" %>
    <% end %>

    <p>Ви ще не зареєстровані? <%= link_to "Заповніть реєстраційну форму тут!", signup_path %></p>
  </div>
</div>
