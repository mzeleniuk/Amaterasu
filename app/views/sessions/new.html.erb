<% provide(:title, "Вхід") %>
<h1>Вхід</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.label :email, "Електронна пошта" %>
        <%= f.text_field :email %>

        <%= f.label :password, "Пароль", id: "sign_in_password_field" %>
        <%= link_to "(забули пароль?)", new_password_reset_path %>
        <%= f.password_field :password %>

        <%= f.label :remember_me, class: "checkbox" do %>
            <%= f.check_box :remember_me %>
            <span>Запам’ятати мене на цьому комп’ютері</span>
        <% end %>

        <%= f.submit "Увійти", class: "btn btn-large btn-block btn-primary button_font" %>
    <% end %>

    <p>Ви ще не зареєстровані? <%= link_to "Заповніть реєстраційну форму тут!", signup_path %></p>
  </div>
</div>
