<% if signed_in? %>
    <div class="row">
      <aside class="span4">
        <section>
          <%= render 'shared/user_info' %>
        </section>
        <section>
          <%= render 'shared/stats' %>
        </section>
        <section>
          <%= render 'shared/micropost_form' %>
        </section>
      </aside>
      <div class="span8">
        <h3>Стрічка публікацій</h3>
        <%= render 'shared/feed' %>
      </div>
    </div>
<% else %>
<div class="row center hero-unit">
  <h1>Вітаємо на Amaterasu!</h1>

  <h2>
    Шукаєте сервіс для ведення свого блогу з мінімалістичним, лаконічним та
    ненав’язливим інтерфейсом? Amaterasu - Ваш вибір!
  </h2>

  <%= link_to "Зареєструватися", signup_path, class: "btn btn-large btn-primary button_font" %>
</div>
<%= image_tag("Desktop.png", alt: "Desktop") %>
<%= image_tag("Notebook.png", alt: "Notebook", :size => "300x208") %>
<%= image_tag("Tablet.png", alt: "Tablet", :size => "220x152") %>
<% end %>
