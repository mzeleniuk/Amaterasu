<% if signed_in? %>
    <div class="row">
      <aside class="span4">
        <section>
          <%= render 'shared/user_info' %>
        </section>
        <section>
          <%= render 'shared/stats' %>
        </section>
        <section>
          <%= render 'shared/micropost_form' %>
        </section>
      </aside>
      <div class="span8">
        <h3>Стрічка публікацій</h3>
        <%= render 'shared/feed' %>
      </div>
    </div>
<% else %>
<div class="center hero-unit">
  <h1>Вітаємо на Amaterasu!</h1>

  <h2>
    Шукаєте сервіс для публікації своїх нотаток з мінімалістичним, лаконічним та
    ненав’язливим інтерфейсом? Amaterasu - Ваш вибір!
  </h2>

  <%= link_to "Зареєструватися", signup_path, id: "signup_button", class: "btn btn-large btn-primary" %>
</div>

<%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %>
