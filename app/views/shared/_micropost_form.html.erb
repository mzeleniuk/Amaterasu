<%= form_for(@micropost, html: { multipart: true }) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field custom_font">
      <%= f.text_area :content, placeholder: "Створити нову публікацію..." %>
    </div>
    <span class="picture">
        <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
    </span>
    <%= f.submit "Опублікувати", class: "btn btn-large btn-block btn-primary button_font" %>
<% end %>

<script type="text/javascript">
    $('#micropost_picture').bind('change', function() {
        size_in_megabytes = this.files[0].size/1024/1024;
        if (size_in_megabytes > 2) {
            alert('Максимальний розмір файлу не повинен перевищувати 2 мегабайт.' +
            'Будь ласка, оберіть менший файл.');
        }
    });
</script>
