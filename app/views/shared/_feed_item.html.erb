<li id="<%= feed_item.id %>">
  <%= image_tag(feed_item.user.avatar.url, :class => 'avatar') %>
  <span class="user">
      <%= link_to feed_item.user.name, feed_item.user %>
  </span>
  <span class="content"><%= feed_item.content %></span>
  <span class="timestamp">
      Опубліковано <%= time_ago_in_words(feed_item.created_at) %> тому.
  <% if current_user?(feed_item.user) %>
      <%= link_to 'Видалити', feed_item, method: :delete,
                  data: { confirm: 'Ви впевнені?' },
                  title: feed_item.content %>
  <% end %>
  </span>
</li>
