<% provide(:title, 'Всі користувачі') %>
<h1>Всі користувачі</h1>
<div class="row">
  <div class="span6">
    <%= form_tag users_path, :method => 'get' do %>
      <div style="float: left;">
      <%= search_field_tag :search, params[:search], placeholder: 'Ім’я користувача', size: 30 %>
      </div>
      <div style="float: left;">
      <%= submit_tag 'Пошук', :name => nil, class: 'btn btn-primary button_font' %>
      </div>
    <% end %>
  </div>
</div>
<%= will_paginate %>
<ul class="users">
  <%= render @users %>
</ul>
<%= will_paginate %>
