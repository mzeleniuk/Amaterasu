<% provide(:title, 'Реєстрація') %>
<h1>Реєстрація</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :name, "Ім’я користувача" %>
        <%= f.text_field :name %>

        <%= f.label :email, "Електронна пошта" %>
        <%= f.text_field :email %>

        <%= f.label :password, "Пароль" %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Підтвердження паролю" %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit "Створити обліковий запис", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>